@startuml

class Camera{
        - __camera_pos: array
        - __look_: array
        - __norm: array
        - __radius: float
        - __phi: float
        - __theta: float

        + get_view_matrix(): array
        + reset_values()
        + modify_radius(change_value)
        + modify_elevation(angle)
        + modify_azimuthal_angle(angle)
        - __spherical_to_cartesian(radius, phi, rho): array
}

@enduml