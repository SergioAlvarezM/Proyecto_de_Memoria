@startuml

' Template file to use to create the diagrams od the packages.
' Every file must have a sub part called INTERNAL with the internal connections of the package and
' a sub part called EXTERNAL with the external parts.

!startsub INTERNAL
package scene {
    class Scene
    class TransformationHelper
    class UnitConverter
    !includesub src.engine.scene.model.puml!INTERNAL
}

Scene o--o Model
Scene .> TransformationHelper
Map3DModel .> UnitConverter
!endsub

!if (%false())
    !startsub EXTERNAL
        Scene o--o Engine
        Scene .> NonExistentPolygonError
        Scene .> SceneError
    !endsub
!endif

' Code that will affect only the current diagram
' can be messy since will not be imported
hide members
hide src.error
src.engine.Engine o--o Scene
Scene -d.> src.error.NonExistentPolygonError
Scene -d.> src.error.SceneError

left to right direction

@enduml